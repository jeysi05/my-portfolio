---
import Layout from '../layouts/Layout.astro';
import { projects } from '../data/projects';
---

<Layout title="John Alcantara | Web Developer">
  <main class="max-w-4xl mx-auto px-6 py-12">
    
    <section class="mb-20 pt-10">
      <span class="text-blue-600 font-bold tracking-wider uppercase text-sm">Web Developer</span>
      <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900 mt-4 mb-6 leading-tight">
        Building digital experiences with <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500">code</span> and creativity.
      </h1>
      <p class="text-xl text-gray-600 leading-relaxed max-w-2xl mb-8">
        Hi, I'm <strong>John Alcantara</strong>. I am a passionate developer based in the Philippines. 
        I specialize in building fast, accessible, and responsive web applications using 
        modern tools like <strong>React</strong>, <strong>Next.js</strong>, and <strong>Node.js</strong>.
      </p>
      
      <div class="flex gap-4">
        <a href="#projects" class="bg-gray-900 text-white px-6 py-3 rounded-lg font-medium hover:bg-gray-800 transition">
          View My Work
        </a>
        <a href="mailto:jeysi05@gmail.com" class="bg-white border border-gray-300 text-gray-700 px-6 py-3 rounded-lg font-medium hover:bg-gray-50 transition">
          Contact Me
        </a>
      </div>
    </section>

    <h2 id="projects" class="text-2xl font-bold text-gray-900 mb-8 flex items-center gap-2">
      <span class="w-2 h-8 bg-blue-600 rounded-full"></span>
      Featured Projects
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {projects.map((project) => (
        <a href={`/projects/${project.slug}`} class="group block h-full">
          <div class="bg-white border border-gray-200 rounded-2xl p-6 h-full hover:shadow-xl hover:border-blue-100 transition duration-300 transform hover:-translate-y-1">
            <h3 class="text-xl font-bold text-gray-900 group-hover:text-blue-600 transition mb-3 flex justify-between items-center">
              {project.title} 
              <span class="text-gray-400 group-hover:translate-x-1 transition">&rarr;</span>
            </h3>
            <p class="text-gray-600 mb-6 text-sm leading-relaxed line-clamp-3">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2 mt-auto">
              {project.tech.map((t) => (
                <span class="bg-blue-50 text-blue-700 text-xs font-semibold px-3 py-1 rounded-full">
                  {t}
                </span>
              ))}
            </div>
          </div>
        </a>
      ))}
    </div>
    
  </main>
</Layout>